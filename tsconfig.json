{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "preserve",
    "strict": true,
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "target": "es2019",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.vue"
  ]
}