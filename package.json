{
  "name": "rhythm",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/gulp": "^4.0.9",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^16.11.10",
    "chokidar": "^3.5.2",
    "dedent": "^0.7.0",
    "gulp": "^4.0.2",
    "inquirer": "^8.2.0",
    "lerna": "^4.0.0",
    "p-defer": "^3.0.0",
    "patch-package": "^6.4.7",
    "prettier": "2.5.1",
    "serve": "^13.0.2",
    "ts-node": "10.9.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "4.7.4"
  },
  "scripts": {
    "dev": "NODE_ENV=development yarn gulp dev",
    "build": "NODE_ENV=production ts-node --esm --transpileOnly scripts/build.ts",
    "clean": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "lint": "prettier --write packages",
    "lint:staged": "prettier --write $(git diff --name-only --diff-filter d | grep '.ts$' | xargs)",
    "test": "lerna run test --stream",
    "lint:check": "yarn prettier --check packages",
    "check-ts": "lerna run check-ts",
    "postinstall": "patch-package"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
